{% block body %}
<style>
    .Tblheader {
        font-family: "Arial";
        font-size: 14px;
        font-weight: bold;
        color:#FFFFFF;

    }
    .TxtDetail {
        font-family: "Arial";
        font-size: 14px;     
      

    }
   
</style>


<table width="510" border="0" cellpadding="0" cellspacing="0" bgcolor="#FFFFFF">
    <tr>
        <td width="100" align="right" style="padding-right:5px;font-family: 'Arial';font-size: 14px;font-weight: bold;">Invoice No :</td>
        <td>{{ header.getInvoiceNo() }}</td>
        <td width="100" align="right" style="padding-right:5px;font-family: 'Arial';font-size: 14px;font-weight: bold;">User :</td>
        <td width="100">{{ header.getUsername() }}</td>
    <tr>
    <tr>
        <td align="right" style="padding-right:5px;font-family: 'Arial';font-size: 14px;font-weight: bold;">Invoice Time :</td>
        <td style="height:20px;border-bottom: 1px dashed #000000;">{{ header.getCreatedAt()|date('d-m-Y H:i:s') }}</td>
        <td align="right" style="padding-right:5px;"></td>
        <td></td>
    <tr>
</table>

 <table width="510" align="center" cellpadding="0" cellspacing="0" bgcolor="#FFFFFF">
    <tr bgcolor="#454545">
        <td width="50" align="center" class="Tblheader" style="border: solid 1px #ffffff;padding-top:10px;">No.</td>
        <td width="220" align="center" class="Tblheader" style="border: solid 1px #ffffff;padding-top:10px;">Item Description</td>
        <td width="50" align="center" class="Tblheader" style="border: solid 1px #ffffff;padding-top:10px;">Qty</td>
        <td width="100" align="center" class="Tblheader" style="border: solid 1px #ffffff;padding-top:10px;">Price</td>
        <td width="100" align="center" class="Tblheader" style="border: solid 1px #ffffff;padding-top:10px;">Total</td>
    <tr>
    {% for data in datas %}
    <tr style="padding-top:10px;">
        <td align="right" style="padding-right:5px;border-right: solid 1px #000000;border-left: solid 1px #000000;" class="TxtDetail">{{ loop.index }}</td>
        <td style="padding-left:5px;border-right: solid 1px #000000;" class="TxtDetail">{{ data.product_name }}</td>
        <td align="right" style="padding-right:5px;border-right: solid 1px #000000;" class="TxtDetail">{{ data.quantity }}</td>
        <td align="right" style="padding-right:5px;border-right: solid 1px #000000;" class="TxtDetail">{{ data.unit_price|number_format(2, '.', ',') }}</td>
        <td align="right" style="padding-right:5px;border-right: solid 1px #000000;" class="TxtDetail">{{ data.total|number_format(2, '.', ',') }}</td>
    <tr>
    {% endfor %}
    <tr>
        <td colspan="3" align="right" class="TxtDetail" style="border-top: 1px solid black;">&nbsp;</td>
        <td align="right" class="TxtDetail" style="border-top: 1px solid black;border-left: 1px solid black;">Total</td>
        
        <td align="right" style="padding-right:5px;border: 1px solid black;" class="TxtDetail">{{ totalPrice|number_format(2, '.', ',') }}</td>
    <tr>
    <tr>
        <td colspan="3" align="right" >&nbsp;</td>
        <td align="right" style="border-top: 1px solid black;">&nbsp;</td>
        
        <td align="right" style="border-top: 1px solid black;">&nbsp;</td>
    <tr>
</table>
{% endblock %}
